# Discord Bot Environment Configuration Template
# Copy this file to .env and fill in the required values

# Required Environment Variables
# ============================

# Discord bot token (get from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional Discord Configuration
# =============================

# Command prefix for text commands (default: !)
DISCORD_COMMAND_PREFIX=!

# Channel ID for periodic status updates (optional)
DISCORD_STATUS_CHANNEL_ID=

# Comma-separated list of allowed guild IDs (optional, for restricted bot)
DISCORD_ALLOWED_GUILDS=

# Name of the admin role (default: Admin)
DISCORD_ADMIN_ROLE=Admin

# Bot Behavior Configuration
# =========================

# Maximum number of concurrent tasks (default: 10)
BOT_MAX_CONCURRENT_TASKS=10

# Task timeout in minutes (default: 60)
BOT_TASK_TIMEOUT_MINUTES=60

# Status update interval in minutes (default: 30)
BOT_STATUS_UPDATE_INTERVAL=30

# Logging Configuration
# ====================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
BOT_LOG_LEVEL=INFO

# Log file path (default: logs/discord_bot.log)
BOT_LOG_FILE=logs/discord_bot.log

# Integration Configuration
# ========================

# GitHub token for repository operations (optional)
GITHUB_TOKEN=

# Database URL for persistence (optional)
DATABASE_URL=

# Additional agent configuration can be added here
# Example: ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Example: OPENAI_API_KEY=your_openai_api_key_here